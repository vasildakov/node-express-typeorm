{
   "compilerOptions": {
      "lib": ["es5", "es6", "dom"],
      "target": "ES2020",  
      "module": "commonjs",
      "baseUrl": ".",
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true, 
      "paths": {}, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "exclude": ["node_modules", "tests", "dist"],
   "include": ["src/**/*"]
   
}